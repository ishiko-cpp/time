ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/test-framework/include/Ishiko/TestFramework/Core.bkl;
import $(ishikopath)/time/include/Ishiko/Time.bkl;

toolsets = gnu vs2019 vs2017 vs2015 vs2013;

gnu.makefile = ../gnumake/GNUmakefile;
vs2019.solutionfile = ../vc16/IshikoTimeTests.sln;
vs2017.solutionfile = ../vc15/IshikoTimeTests.sln;
vs2015.solutionfile = ../vc14/IshikoTimeTests.sln;
vs2013.solutionfile = ../vc12/IshikoTimeTests.sln;

program IshikoTimeTests : IshikoTestFrameworkCore, IshikoTime
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoTestFrameworkCore IshikoConfiguration IshikoXML IshikoFileSystem IshikoIO IshikoProcess IshikoTime IshikoText IshikoErrors;
        libs += fmt boost_filesystem;
    }

    headers
    {
        ../../src/DateAndOptionalTimeTests.hpp
        ../../src/DateTests.hpp
        ../../src/StopwatchTests.hpp
        ../../src/SystemTimeTests.hpp
        ../../src/TimeOfDayTests.hpp
        ../../src/UTCTimeTests.hpp
    }

    sources
    {
        ../../src/DateAndOptionalTimeTests.cpp
        ../../src/DateTests.cpp
        ../../src/main.cpp
        ../../src/StopwatchTests.cpp
        ../../src/SystemTimeTests.cpp
        ../../src/TimeOfDayTests.cpp
        ../../src/UTCTimeTests.cpp
    }
}
